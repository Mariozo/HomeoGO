<?xml version="1.0" encoding="utf-8"?>

<!-- File: app/src/main/AndroidManifest.xml
    Module: HomeoGO
    Purpose: Application manifest with base XML theme; MainActivity is pure Compose
    Created: 17.sep.2025   11:12
    ver. 1.3 (Added RECORD_AUDIO permission)                                                        -->

<!-- # 1. Manifest root                                              -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lv.mariozo.homeogo">

    <!-- Declare RECORD_AUDIO permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- # 2. Application (base XML theme)                                -->
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomeoGO">

<!-- # 3. MainActivity (pure Compose, no separate theme)               -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>
</manifest>
