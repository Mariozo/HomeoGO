<!-- File: app/src/main/res/values/themes.xml
    Module: HomeoGO
    Purpose: Base XML theme for window-level styling before Compose renders
    Created: 17.sep.2025   11:25
    ver. 1.0                                                         -->

<!-- # 1. Resources root -->
<resources>

<!-- # 2. Theme.HomeoGO definition                                   -->
    <style name="Theme.HomeoGO" parent="Theme.Material3.DayNight">
        <!-- Remove ActionBar / TitleBar -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

<!-- Window appearance before Compose draws                          -->
        <item name="android:windowBackground">@color/white</item>

<!-- Edge-to-edge baseline colors                                    -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

</resources>
